doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="//code.jquery.com/jquery-1.10.2.js")
    <!--script(src="/javascripts/jquery.js")-->

    script.
      var active_tab= !{JSON.stringify(active)}

    script(src="/javascripts/active.js")
  body
    header
      div.title
          span= "Pepito Pizzeria"

      unless (authRequired)
        ul.menu
          li.first#home
            a(href='/') Home
          li#account
            a(href='/users/update') My Account
          - if (locals.permissions && locals.permissions.contains('manageUser'))
            li#perms
              a(href='/permissions') Permissions
          li#listuser
            a(href='/users') Users
          - if (locals.permissions && locals.permissions.contains('manageRestaurant'))
            li#resto
              a(href='/restaurants') Restaurants 
          - if (locals.permissions && locals.permissions.contains('manageRestaurant'))
            li#restaurateurs
              a(href='/restaurateurs') Restaurateurs
          - if (locals.permissions && locals.permissions.contains('passOrder'))
            li#createorder
              a(href='/orders/create') Pass order
          - if (locals.permissions && locals.permissions.contains('createMenu'))
            li#createmenu
              a(href='/menus/create') Create menu
          li#logout
            a(href='/logout') Logout
         
    div.content
      block content

