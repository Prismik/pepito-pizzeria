extends layout

block content
    div.loginPage
        h1= header

        - if (locals.error)
            div#error
                span= error
        

        form#formLogin(name="login",method="post",action="authenticate")
            input#inputUsername(type="text", placeholder="Email", name="email")
            br
            input#inputUserPassword(type="password", placeholder="Password", name="password")
            br
            button#btnSubmit(type="submit") Login

        br 
        
        form(name="login",action="/register")
            button(type="submit") Register
