extends ../layout

block content

    script(type="text/javascript" src="/javascripts/confirmation.js")

    h1= "Confirm order"

    table#order
        thead
            tr 
                th Plate
                th Quantity
                th Unit price
                th Price
        tbody
            each entry, i in orderList
                tr
                    td #{entry.plate.name}
                    td #{entry.quantity}
                    td #{entry.plate.price}$
                    td= (entry.plate.price*entry.quantity).toFixed(2)+"$"
            tr  
                td(colspan=3)= "Sub"
                td= subtotal.toFixed(2)+"$"
            tr  
                td(colspan=3)= "Total"
                td= total.toFixed(2)+"$"

    h2= "Order informations"

    input(name="order", type="hidden",value=JSON.stringify(orderList))

    label= "Addresse: "
    select(name="address")
        option(value='')='Select an address'

    button(id="addAddress")= "New address"

    br

    label= "Date: "
    input(name="deliveryDate")

    br

    button(id="send")= "Send order"